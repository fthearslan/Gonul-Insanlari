        <div class="ibox-content">
            <div class="feed-activity-list">
                @foreach (var contact in Model)
                {
                    <div class="feed-element">
                        <a style="text-decoration-color:#525761" href="/Admin/Contact/GetDetails/@contact.ID">
                            <div>
                                <small class="float-right text-navy">@GetDate.GetCreateDate(contact.Created)</small>
                                <i style="margin-right:10px;margin-left:2px;" class="fa fa-envelope-o"></i>  <strong>@contact.NameSurname</strong> - @contact.EmailAddress
                                @if (contact.Content.Length >= 70)
                                {
                                    <div>
                                        @contact.Content.Substring(0,contact.Content.Substring(0,70).LastIndexOf(" "))...

                                    </div>
                                }
                                else
                                {
                                    <div>@contact.Content</div>

                                }
                                <small class="text-muted"></small>
                            </div>
                        </a>

                    </div>
                }

            </div>
        </div>
    </div>
</div>
