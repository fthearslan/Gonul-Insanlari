@using GonulInsanlari.Areas.Admin.ViewComponents.Assignment
@model List<AddUserToTaskVIewModel>







<button type="button" class="btn btn-primary btn-xs" href="#" data-toggle="modal" data-target="#myModal5"><i class="fa fa-plus"></i> Add</button>

<div class="modal inmodal" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-user-plus fa-4x "></i>
                <h4 class="modal-title"> Add a user</h4>
                <small>Add a new user for this task.</small>
            </div>

            <div class="modal-body">


                <div class="full-height-scroll">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fa fa-user"></i></th>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody >
                                
                                @foreach (var user in Model)
                                {
                                    string id = user.Id.ToString();
                                    <tr id="tabletr">
                                        <td class="client-avatar"><img alt="image" src="~/Images/@user.ImagePath"> </td>
                                        <td><a href="#userProfile/@user.Id" class="client-link">@user.UserName</a></td>
                                        <td>Admin</td>
                                        <td><a href="#" onclick="AddUser('@id')" class="btn btn-primary">Add</a></td>
                                    </tr>
                                }
                             

                            </tbody>
                        </table>
                    </div>
                </div>



            </div>
            <div class="modal-footer">
                <a href="#" onclick="Reload()" class="btn btn-primary">Close</a>
               
            </div>
        </div>
    </div>
</div>

<p></p>
