@model List<Announcement>

<div class="col-lg-6">
    <div class="ibox ">
        <div class="ibox-title">
            <h5><a href="/Admin/Announcement/List" style="color:inherit">Announcements</a></h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        @foreach (var announce in Model)
        {

            <div style="cursor:pointer" class="ibox-content ibox-heading myBox">
                <h3>
                    <i style="margin-right:15px;" class="fa fa-bullhorn fa-lg"></i>@announce.Title
                </h3>
                @if (announce.Details.Length >= 90)
                {
                   @*  <small>@announce.Details.Substring(0,announce.Details.Substring(0,100).LastIndexOf(" "))...</small> *@
                   <p>@announce.Details.Substring(0,50)...</p>
                }
                else
                {
                    <p>@announce.Details</p>

                }
                <a @* style="text-decoration-color:inherit" *@ href="/Admin/Announcement/Details/@announce.ID"></a>

            </div>

        }
    </div>

</div>
<script>
    $(".myBox").click(function () {
        window.location = $(this).find("a").attr("href");
        return false;
    });
</script>