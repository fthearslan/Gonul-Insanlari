@model List<Announcement>
<div id="right-sidebar" class="animated">
    <div class="sidebar-container">

        <ul class="nav nav-tabs navs-3">
            <li>
                <a class="nav-link active " data-toggle="tab" href="#tab-1"> <i class="fa fa-bullhorn"></i></a>
            </li>
            <li>
                <a class="nav-link" data-toggle="tab" href="#tab-2"><i class="fa fa-calendar"></i></a>
            </li>
            <li>
                <a class="nav-link" data-toggle="tab" href="#tab-3"> <i class="fa fa-bookmark"></i> </a>
            </li>
        </ul>

        <div class="tab-content">


            <div id="tab-1" class="tab-pane active">

                <div class="sidebar-title">
                    <h3>Announcements</h3>
                    <p style="font-weight:600"><i class="fa fa-tim"></i>There are @ViewBag.Count announcements, <a href="#">see all</a>.</p>
                </div>

                <div>
                    @foreach (var announce in Model)
                    {
                        <div class="sidebar-message">
                            <a href="/Admin/Announcement/GetDetails/@announce.ID">
                                <div class="float-left text-center">
                                    <i class="fa fa-bullhorn fa-2x"></i>
                                </div>
                                <div class="media-body">
                                <h4>@announce.Title</h4>
                                    @announce.Details.Substring(0,announce.Details.Substring(0,100).LastIndexOf(" "))...
                                    <br>
                                    <small class="text-muted">@GetDate.GetCreateDate(announce.Created)</small>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
            @await Component.InvokeAsync("AssignmentBar")
            <div id="tab-3" class="tab-pane">

                <div class="sidebar-title">
                    <h3></i>Notes</h3>
                    <small><i class="fa fa-tim"></i>Notes will be here.</small>
                </div>
                Content
            </div>

        </div>
    </div>
</div>

