@model List<ArticleAllViewModel>


<link href="~/inspinia-gh-pages/css/plugins/footable/footable.core.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div style="margin-top:20px;" class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <h2><i class="fa fa-pencil "></i> Articles </h2>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table id="dataTable" class="table table-striped">

                        <thead>
                            <tr>

                                <th>Title</th>
                                <th>Category</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var article in Model)
                                {
                                    int id = article.ArticleID;
                                    <tr>
                                        <td style="cursor:pointer" class="myBox"><a href="/Admin/Article/GetDetails/@article.ArticleID"></a># @article.Title</td>
                                        <td><span style="cursor:pointer" class="label label-primary myBox"><a href="#categorypage"></a>@article.Category.Name</span></td>
                                        <td>@article.Created.ToString("dd-MMM-yyyy")</td>
                                        <td><span class="label label-warning">Draft</span></td>
                                        <td class="btn-group">
                                            <a class="btn-white btn btn-xs" href="/Admin/Article/GetDetails/@article.ArticleID">View</a>
                                            <a class="btn-danger btn btn-xs" onclick="fire(@id)" id="btn_delete" value="@article.ArticleID" href="#"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>

                                    <td> There is no draft found.</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>



</div>

