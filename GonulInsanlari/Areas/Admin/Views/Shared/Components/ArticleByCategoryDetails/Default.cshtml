@model List<ArticleByCategoryViewModel>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />

<div class="row">
    <div class="col-md-12">
        <div class="small text-right">
            <h5>Stats:</h5>
            <div> <i class="fa fa-file"> </i> @Model.Count  articles</div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <h2>Articles</h2>

        <div class="table-responsive">
            <table id="dataTable" class="table table-striped">

                <thead>
                    <tr>

                        <th>Title</th>
                        <th>Published by</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var article in Model)
                        {
                            <tr>

                           <td>@article.Title</td>
                           <td>@article.AppUserName</td>
                                <td class="btn-group">
                                    <a class="btn-white btn btn-xs" href="/articles/details/@article.Id">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>

                            <td>There is no article found.</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
     
    </div>
</div>
<script>

    $(".myBox").click(function () {
        window.location = $(this).find("a").attr("href");
        return false;
    });

</script>
