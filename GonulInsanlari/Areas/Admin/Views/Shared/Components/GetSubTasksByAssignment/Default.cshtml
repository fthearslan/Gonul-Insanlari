@model List<SubTaskViewModel>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Progress</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var subtask in Model)
        {
            string id = subtask.Id.ToString();


            <tr>

                @if (ViewBag.userExists)
                {
                    <td>
                        <select id="@id" onchange="TaskonChange('@id')" class="btn btn-primary btn-xs">
                            <option selected disabled hidden>@subtask.Progress</option>
                            <option value="Pending" class="btn btn-primary btn-sm">Pending</option>
                            <option value="InProgress" class="btn btn-primary btn-sm">InProgress</option>
                            <option value="Done" class="btn btn-primary btn-sm">Done</option>
                        </select>

                    </td>
                }
                else
                {
                    <td><span onclick="invalidAccess()" class="btn btn-primary btn-xs">@subtask.Progress</span></td>
                }

                <td>
                    <p>
                        @subtask.Description
                    </p>
                </td>

                <td>
                    @if (ViewBag.userExists)
                    {
                        <a class="btn-danger btn btn-xs" onclick="deleteTask('@id')" href="#"><i class="fa fa-trash"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.userExists)
{
    <a class="btn btn-primary btn-xs" href="#" data-toggle="modal" data-target="#myModal4"><i class="fa fa-plus"></i> Add</a>
}


<div class="modal inmodal" id="myModal4" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i style="margin-left:25px;" class="fa fa-pencil-square-o fa-4x "></i>
                <h4 class="modal-title"> Add a subtask</h4>
                <small>Add a new subtask for this task.</small>
            </div>

            <div class="modal-body">
                <label for="description">Description</label>

                <textarea id="description" maxlength="150" class="form-control" style="height:120px;" required></textarea>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-white" data-dismiss="modal">Close</button>
                <a href="#" onclick="addSubtask()" class="btn btn-primary"><i class="fa fa-plus"></i> Add</a>
            </div>
        </div>
    </div>
</div>




@section Script{
    <script>
        function deleteTask(id) {

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {

                if (result.isConfirmed) {

                    $.ajax({
                        type: "POST",
                        url: "/Admin/Assignment/Delete/" + id,

                    });
                    Swal.fire({
                        title: "Deleted!",
                        text: "The assignment has been deleted.",
                        icon: "success"
                    }).then(function () {
                        window.location.reload();
                    });
                }


            });

        }
    </script>
}

