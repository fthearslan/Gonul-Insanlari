@model List<Comment>

<div class="row">
    <div class="col-md-12">
        <div class="small text-right">
            <h5>Stats:</h5>
            <div> <i class="fa fa-comments-o fa-lg"> </i> @ViewBag.Count comments </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <h2>Comments:</h2>
        @foreach (var comment in Model.Take(3))
        {
            <div class="social-feed-box">
                <div class="social-avatar">
                    <a class="float-left">
                        <i class="fa fa-comment fa-2x"></i>
                    </a>
                    <div style="padding-left:15px;" class="media-body">
                        <a>
                            @comment.NameSurname
                        </a>
                        <small class="text-muted">@comment.Created</small>
                    </div>
                </div>
                <div class="social-body">
                    <p>
                        @comment.Content
                    </p>
                </div>
            </div>
        }
        <p>@TempData["Warning"]</p>
        <a class="float-right" href="/Admin/Comment/GetByArticle/"><h5>See all comments for this article >></h5></a>
    </div>
</div>
