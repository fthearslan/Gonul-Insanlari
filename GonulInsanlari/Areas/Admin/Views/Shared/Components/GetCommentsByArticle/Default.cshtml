@model List<Comment>

<div class="row">
    <div class="col-md-12">
        <div class="small text-right">
            <h5>Stats:</h5>
            <div> <i class="fa fa-comments-o fa-lg"> </i> @ViewBag.Count comments </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <h2>Comments:</h2>
        @foreach (var comment in Model)
        {
            <div class="social-feed-box">
                <div class="media-body">
                    @comment.NameSurname
                    <small class="text-muted">@comment.Created - @GetDate.GetCreateDate(comment.Created)</small>
                </div>
            </div>
            <div class="social-body">
                <p>
                    @comment.Content
                </p>
            </div>
        }
        <p>@TempData["Warning"]</p>
    </div>
</div>