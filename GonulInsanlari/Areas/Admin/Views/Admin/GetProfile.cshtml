@model AdminProfileViewModel
@{
    ViewData["Title"] = "GetProfile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row m-b-lg m-t-lg">
        <div class="col-md-6">

            <div class="profile-image">
                <img src="~/Images/@Model.ImagePath" class="rounded-circle circle-border m-b-md" alt="profile">
            </div>
            <div class="profile-info">
                <div class="">
                    <div>
                        <h2 class="no-margins">
                            @Model.Name @Model.Surname
                        </h2>

                        <h4>
                            @foreach (var role in Model.Roles)
                            {
                                <i class="fa fa-id-badge"></i> @role

                            }

                        </h4>
                        <h5>
                            <a href="#" class="btn btn-w-m btn-link"><i class="fa fa-pencil-square-o"></i> Edit Profile</a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

            @await Component.InvokeAsync("AdminProfileStatistics",new {userId= Model.Id})

        </div>

        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <h3>About @Model.UserName</h3>

                    <p class="small">
                        There are many variations of passages of Lorem Ipsum available, but the majority have
                        suffered alteration in some form, by injected humour, or randomised words which don't.
                        <br />
                        <br />
                        If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't
                        anything embarrassing
                    </p>

                    <p class="small font-bold">
                        <span><i class="fa fa-circle text-navy"></i> Online status</span>
                    </p>

                </div>
            </div>

            <div class="ibox">
                <div class="ibox-content">
                    <h3>Last Activities</h3>


                </div>
            </div>

        </div>



    </div>

</div>
