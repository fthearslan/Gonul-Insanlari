@model IPagedList<AdminListViewModel>
@{
    ViewData["Title"] = "GetUsers";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/jquery.toast.min.css" rel="stylesheet" />


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />



<div class="tabs-container">
    <ul class="nav nav-tabs" role="tablist">
        <li><a class="nav-link active" data-toggle="tab" href="#tabs-1">Users</a></li>
        <li><a class="nav-link " data-toggle="tab" href="#tabs-2"><i class="fa fa-search"></i></a></li>

    </ul>
    <div class="tab-content">
        <div role="tabpanel" id="tabs-1" class="tab-pane active">
            <div class="panel-body">
                <div class="ibox-content">
                    <div class="row">
                        @foreach (var user in Model)
                        {

                            string color = (user.Status == true) ? "btn-danger" : "btn-primary";
                            string text = (user.Status == true) ? "Disable" : "Enable";
                            string icon = (user.Status == true) ? "fa fa-trash" : "fa fa-undo";


                            <div class="col-sm-3">
                                <div class="contact-box center-version">

                                    <a href="profile.html">

                                        <img alt="image" class="rounded-circle" src="~/Images/@user.ImagePath">


                                        <h3 class="m-b-xs"><strong>@user.Name @user.Surname</strong></h3>

                                        <div class="font-bold">@@@user.UserName</div>
                                    
                                            <address class="m-t-md">

                                                <strong>@user.Email</strong><br>

                                                Last login : @GetDate.GetCreateDate(user.LastLogin) <br>


                                            </address>
                                        

                                       

                                    </a>
                                    <div class="contact-box-footer">
                                        <div class="m-t-xs btn-group">

                                            <a href="/admin/u/user/@user.UserName" class="btn btn-xs btn-primary "><i class="fa fa-eyes"></i>See</a>

                                            @if (User.IsInRole("SuperAdmin"))
                                            {

                                                <a href="#" onclick="enableOrDisable('@user.Id',@text)" class="btn btn-xs @color"><i class="@icon"></i> @text</a>
                                            }

                                        </div>
                                    </div>

                                </div>
                            </div>

                        }
                    </div>

                    @Html.PagedListPager((IPagedList)Model,pageNumber=>Url.Action("GetUsers",new { pageNumber}))

                </div>


            </div>
        </div>

        <div role="tabpanel" id="tabs-2" class="tab-pane ">


            @await Component.InvokeAsync("GetAdminsAll")


        </div>

    </div>
</div>


@section Script{

    <script src="~/js/admin.js"></script>
    <script src="sweetalert2.all.min.js"></script>


    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/lib/jquery.toast.min.js"></script>


    <script>
        $(document).ready(function () {
            $("#dataTable").dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json"
                },
                "searching": true,
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10,
                "responsive": true,
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false
                }]
            });
        });
    </script>




}