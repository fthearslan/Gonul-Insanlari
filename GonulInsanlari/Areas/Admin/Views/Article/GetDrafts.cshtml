@using EntityLayer
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Article>
@{
    ViewData["Title"] = "GetDrafts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/inspinia-gh-pages/css/plugins/footable/footable.core.css" rel="stylesheet">

<div style="margin-top:20px;" class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-pencil "></i> Drafts</h2>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">

                 @*    <div class="col-sm-4 m-b-xs">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-sm btn-white ">
                                <input type="radio" name="options" id="option1" autocomplete="off" checked> Day
                            </label>
                            <label class="btn btn-sm btn-white active">
                                <input type="radio" name="options" id="option2" autocomplete="off"> Week
                            </label>
                            <label class="btn btn-sm btn-white">
                                <input type="radio" name="options" id="option3" autocomplete="off"> Month
                            </label>
                        </div>
                    </div> *@
                    <div style="margin-left:auto;margin-right:0;" class="col-sm-3">
                        <div class="input-group">
                            <input placeholder="Search" type="text" class="form-control form-control-sm"> <span class="input-group-append">
                                <button type="button" class="btn btn-sm btn-primary">
                                    Search
                                </button>
                            </span>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>Title</th>
                                <th>Category</th>
                                <th>Created</th>
                                <th>Saved by</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var draft in Model)
                            {
                            <tr>
                                    <td style="cursor:pointer" class="myBox"><a href="/Admin/Article/GetDetails/@draft.ArticleID"></a># @draft.Title</td>
                                    <td><span style="cursor:pointer" class="label label-primary myBox"><a href="#categorypage"></a>@draft.Category.Name</span></td>
                                <td>@draft.Created.ToString("dd-MMM-yyyy")</td>
                                    <td>@@@draft.AppUser.UserName</td>
                                <td class="btn-group">
                                    <a class="btn-white btn btn-xs" href="/Admin/Article/GetDetails/@draft.ArticleID">View</a>
                                        <a class="btn-danger btn btn-xs" href="/Admin/Article/DeleteArticle/@draft.ArticleID"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager((IPagedList)Model,pageNumber=>Url.Action("GetDrafts",new {pageNumber}))
                </div>

            </div>
        </div>
    </div>

</div>

@section Script{
    <script>

    $(".myBox").click(function () {
        window.location = $(this).find("a").attr("href");
        return false;
    });

        </script>


}