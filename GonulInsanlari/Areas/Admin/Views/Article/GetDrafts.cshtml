@using EntityLayer
@model List<Article>
@{
    ViewData["Title"] = "GetDrafts";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/inspinia-gh-pages/css/plugins/footable/footable.core.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div style="margin-top:20px;" class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-pencil "></i> Drafts</h2>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">

                   
                    <div style="margin-left:auto;margin-right:0;" class="col-sm-3">
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="dataTable" class="table table-striped">

                        <thead>
                            <tr>

                                <th>Title</th>
                                <th>Category</th>
                                <th>Created</th>
                                <th>Saved by</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count > 0)
                            {
                                @foreach (var draft in Model)
                                {
                                    int id = draft.ArticleID;

                                    <tr>
                                        <td style="cursor:pointer" class="myBox"><a href="/Admin/Article/GetDetails/@draft.ArticleID"></a># @draft.Title</td>
                                        <td><span style="cursor:pointer" class="label label-primary myBox"><a href="#categorypage"></a>@draft.Category.Name</span></td>
                                        <td>@draft.Created.ToString("dd-MMM-yyyy")</td>
                                        <td>@@@draft.AppUser.UserName</td>
                                        <td class="btn-group">
                                            <a class="btn-white btn btn-xs" href="/Admin/Article/GetDetails/@draft.ArticleID">View</a>
                                            <a class="btn-danger btn btn-xs" onclick="fire(@id)"  id="btn_delete" value="@draft.ArticleID"  href="#"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>

                                    <td> There is no draft found.</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>



</div>

@section Script{
    <script>

        $(".myBox").click(function () {
            window.location = $(this).find("a").attr("href");
            return false;
        });

    </script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="sweetalert2.all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
        $(document).ready(function () {
            $("#dataTable").dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json"
                },
                "searching": true,
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10,
                "responsive": true,
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false
                }]
            });
        });
    </script>

    <script>
        function fire(id) {
       
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                
                if (result.isConfirmed) {

                   
                        

                    $.ajax({
                        type: "POST",
                        url: "/Admin/Article/Delete/"+id,
                        
                    });
                    Swal.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success"
                    }).then(function () {
                        window.location.reload();
                    });
                }
               

            });
           
        }

    </script>

}

