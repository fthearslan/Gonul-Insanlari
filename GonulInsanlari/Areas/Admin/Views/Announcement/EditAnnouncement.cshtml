@model AnnouncementEditViewModel
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
<link href="~/inspinia-gh-pages/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Add a new Announcement</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div style="height:100%;" class="ibox-content">

                    <div class="text-center m-t-md">
                        <h2>Please fill the required fields below.</h2>

                        <form id="form_id" asp-action="EditAnnouncement" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div style="margin-top:30px;" class="form-group  row">
                                <label class="col-sm-2 col-form-label">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" id="title" asp-for="Title" class="form-control">
                                    <div style="margin-top:5px;">
                                        <span asp-validation-for="Title" class="text-danger" id="validate"></span>
                                    </div>
                                </div>


                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Subject</label>



                                <div class="col-sm-10">
                                    <input type="text" id="title" asp-for="Subject" class="form-control">
                                    <div style="margin-top:5px;">
                                        <span asp-validation-for="Subject" class="text-danger" id="validate"></span>
                                    </div>
                                </div>



                            </div>

                            <div class="hr-line-dashed"></div>

                            <div class="form-group  row">
                                <label class="col-sm-2 col-form-label">To</label>
                                <div class="col-sm-10">
                                    <select asp-for="IsForAdmins" id="drop" class="form-control">
                                        <option value="false">For Users</option>
                                        <option value="true">For Admins</option>
                                    </select>

                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Content</label>
                                <div class="col-sm-10">
                                    <textarea id="content" asp-for="Details" class="summernote">
                                        </textarea>

                                    <span style="margin-top:5px;" asp-validation-for="Details" class="text-danger" id="validate3"></span>



                                </div>

                            </div>
                            <div class="form-group row">


                                <div style="margin-right:15px;margin-left:auto">
                                    <button id="btn" onclick="fire()" type="button" class="ladda-button ladda-button-demo btn btn-primary" data-style="zoom-in"><i class="fa fa-check"></i> Publish</button>

                                </div>
                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </div>
    </div>
</div>


@section Script {

    <script src="~/inspinia-gh-pages/js/plugins/sweetalert/sweetalert.min.js"></script>


    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>
    <script src="sweetalert2.all.min.js"></script>


    <script>
        $(document).ready(function () {

            $('.summernote').summernote();

        });


    </script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
            $('div.note-editable').css({ 'min-height': 250 + 'px' });
        });
    </script>
    <script>

        function fire() {

            Swal.fire({
                title: "Are you sure?",
                text: "You may want to check it out again...",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, publish it!"
            }).then((result) => {

                if (result.isConfirmed) {
                    document.getElementById("form_id").submit();


                }


            });

        }

    </script>
}


