@model AssignmentCreateViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/inspinia-gh-pages/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/inspinia-gh-pages/css/plugins/datapicker/datepicker3.css" rel="stylesheet">
<link href="~/inspinia-gh-pages/css/plugins/chosen/bootstrap-chosen.css" rel="stylesheet">
<link href="~/inspinia-gh-pages/css/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet">



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Add a new Task</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div style="height:100%;" class="ibox-content">

                    <div class="text-center m-t-md">

                        <h2>Please fill the required fields.</h2>

                        <form id="form_id" asp-action="Add" enctype="multipart/form-data">
                            
                            @Html.AntiForgeryToken()

                            <div style="margin-top:30px;" class="form-group row">
                                <label class="col-sm-2 col-form-label">Title</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Title" class="form-control">
                                    <div style="margin-top:5px;">
                                        <span asp-validation-for="Title" class="text-danger" id="validate"></span>
                                    </div>
                                </div>
                            </div>





                            <div class="hr-line-dashed"></div>

                            
                            
                            
                            
                            <div           id="Description"          class="form-group row">

                                <label class="col-sm-2 col-form-label">Description</label>

                                <div class="col-sm-10">
                                    <textarea id="content" asp-for="Content" class="summernote">
                                        </textarea>


                                    <span style="margin-top:5px;" asp-validation-for="Content" class="text-danger" id="validate3"></span>



                                </div>

                            </div>

                            

                            <div class="hr-line-dashed"></div>

                            
                            
                            
                            <div           id="Users"     class="form-group row">
                                <label class="col-sm-2 col-form-label">For</label>
                                <div class="col-sm-10">
                                    <select asp-for="Users"  class="chosen-select" multiple="multiple" asp-items="(List<SelectListItem>?)@ViewData["Users"]"></select>
                                </div>
                                <span asp-validation-for="Users" class="text-danger"></span>
                            </div>
                            
                            
                            
                            
                            <div class="hr-line-dashed"></div>

                            
                            
                            <div class="form-group row" id="FILES">
                                <label class="col-sm-2 col-form-label">Attachment</label>



                                <div class="col-sm-10">
                                    <div class="input-group m-b">
                                        <div class="input-group-prepend">
                                            <button onclick="$('#fileUpload').trigger('click'); return false;" href="#" class="btn btn-white " type="button">Upload</button>
                                            <input style="display:none" type="file" accept="audio/*,image/*" onchange="showImageName(this)" asp-for="Files" id="fileUpload" multiple>
                                        </div>

                                        <input type="text" id="textbox1" class="form-control">


                                    </div>

                                    <span asp-validation-for="Files" class="text-danger"></span>

                                </div>




                            </div>



                            <div class="hr-line-dashed"></div>



                            <div        id="StartDate"     class="form-group row">
                                <label class="col-sm-2 col-form-label">Start Date</label>

                            

                                <div class="col-sm-10">
                                    <div class="form-group" id="data_1">
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" asp-for="StartDate" >
                                        </div>
                                    </div>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>

                                </div>

                               
                                 
                              

                            </div>



                            <div class="hr-line-dashed"></div>



                            <div         id="Duedate"       class="form-group row">
                                <label class="col-sm-2 col-form-label">Due Date</label>



                                <div class="col-sm-10">
                                    <div class="form-group" id="data_1">
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" asp-for="Due" >
                                        </div>
                                    </div>
                                    <span asp-validation-for="Due" class="text-danger"></span>

                                </div>

                            </div>



                            <div class="hr-line-dashed"></div>
                      
                            <div class="form-group row">
                                <div style="margin-right:15px;margin-left:auto">
                                    <button id="btn" onclick="fire()" type="button" class="ladda-button ladda-button-demo btn btn-primary" data-style="zoom-in" name="IsDraft" value="false"><i class="fa fa-check"></i> Add</button>
                                </div>
                            </div>
                        </form>

                    </div>

                </div>

            </div>

        </div>
    </div>
</div>

@section Script{


    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="~/inspinia-gh-pages/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/datapicker/bootstrap-datepicker.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/summernote/summernote-bs4.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/chosen/chosen.jquery.js"></script>
    <script src="~/inspinia-gh-pages/js/plugins/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>

    <script>  
    $(document).ready(function() {
            $('.chosen-select').chosen({ width: "100%" });
            $('.tagsinput').tagsinput({
                tagClass: 'label label-primary'
            });
    });
    </script>

    <script>
        function showImageName(input) {
            var file = $("#fileUpload").val().split('\\').pop();;
            document.getElementById("textbox1").value = file;
        }
     
    </script>

    <script>
        var mem = $('#data_1 .input-group.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });
    </script>

    <script>
        $(document).ready(function () {

            $('.summernote').summernote();

        });
       

    </script>

    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
            $('div.note-editable').css({ 'min-height': 50 + 'px' });
        });
    </script>

    <script>

        function fire() {

            Swal.fire({
                title: "Are you sure?",
                text: "You may want to chechk it out again...",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, publish it!"
            }).then((result) => {

                if (result.isConfirmed) {
                    document.getElementById("form_id").submit();


                }


            });

        }

    </script>

    <script>
        $('.summernote').summernote({
            toolbar: [
                // [groupName, [list of button]]
                ['style', ['bold', 'italic', 'underline', 'clear']],

            ]
        });
    </script>


}

