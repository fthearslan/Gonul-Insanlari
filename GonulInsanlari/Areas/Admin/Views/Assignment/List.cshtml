@model List<Assignment>

@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="tabs-container">
        <ul class="nav nav-tabs" role="tablist">
            <li><a class="nav-link active" data-toggle="tab" href="#tabs-1">InProgress</a></li>
            <li><a class="nav-link " data-toggle="tab" href="#tabs-2">Search</a></li>

        </ul>
        <div class="tab-content">
        
            <div role="tabpanel" id="tabs-1" class="tab-pane active">
                <div class="panel-body">
                    <div class="row">
                       @foreach (var task in Model)
                            {

                            <div class="col-lg-4">

                                <div class="ibox">
                                    <div class="ibox-title">
                                        <span class="label label-primary float-right">In Progress</span>
                                        <h5>@task.Title</h5>
                                    </div>
                                    <div class="ibox-content">
                                        <div class="team-members">
                                        @foreach(var member in task.UserAssignments)
                                        {
                                                <a href="#"><img alt="member" class="rounded-circle" src="~/Images/@member.User.ImagePath"></a>
                                        }
                                        </div>
                                  
                                    <h4>Description</h4>
                                    <p>
                                    @task.Content.Substring(50)    
                                    </p>
                                    <div>
                                        <span>Status of current project:</span>
                                        <div class="stat-percent">@ProgressBarWidth.GetWidthBySubTasks(task.SubTasks)%</div>
                                        <div class="progress progress-mini">
                                            <div style="width:@ProgressBarWidth.GetWidthBySubTasks(task.SubTasks)%;" class="progress-bar"></div>
                                        </div>
                                    </div>
                                    <div class="row  m-t-sm">
                                        <div class="col-sm-3">
                                            <div class="font-bold">Publisher</div>
                                            @@@task.Publisher.UserName
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="font-bold">Users</div>
                                            @task.UserAssignments.Count
                                        </div>
                                        <div class="col-sm-3 text-right">
                                            <div class="font-bold">Sub-Tasks</div>
                                            @task.SubTasks.Count <i class="fa fa-level-up text-navy"></i>
                                        </div>
                                            <div class="col-sm-3 text-right">
                                                <div class="font-bold">Published at</div>
                                                @GetDate.GetCreateDate(@task.Created) <i class="fa fa-level-up text-navy"></i>
                                            </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        }

                    </div>
                </div>
            </div>
            <div role="tabpanel" id="tabs-2" class="tab-pane">
                <div class="panel-body">
                 
                </div>
            </div>
        </div>
    </div>
</div>