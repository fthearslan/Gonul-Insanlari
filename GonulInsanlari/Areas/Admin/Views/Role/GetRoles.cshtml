@model List<ListRolesViewModel>

@{
    ViewData["Title"] = "GetRoles";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/css/jquery.toast.min.css" rel="stylesheet" />

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/fixedheader/3.1.6/css/fixedHeader.bootstrap4.min.css" />



<div class="col-lg-12">
    <div class="tabs-container">
        <ul class="nav nav-tabs" role="tablist">
            @foreach(var role in Model)
            {
               

            <li><a class="nav-link @role.IsActive" data-toggle="tab" href="#@role.Name"><i class="fa fa-user"></i> @role.Name </a></li>
            }
            <li><a class="nav-link" title="Add a new role" href="/admin/roles/add"><i class="fa fa-plus"></i></a></li>

        </ul>
        <div class="tab-content">
            @foreach(var role in Model)
            {
                <div role="tabpanel" id="@role.Name" class="tab-pane @role.IsActive">
                    <div class="panel-body">


                        @await Component.InvokeAsync("GetRoleDetails",new {roleName = role.Name,desc=role.Description})

                    </div>
                </div>
               

            }
            </div>


    </div>
</div>





@section Script{


    <script src="~/js/role.js"></script>


    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/lib/jquery.toast.min.js"></script>


    <script>
        $(document).ready(function () {
            $('table.user').dataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json"
                },
                "searching": true,
                "ordering": true,
                "paging": true,
                "pagingType": "full_numbers",
                "pageLength": 10,
                "responsive": true,
                "columnDefs": [{
                    "targets": 3,
                    "orderable": false
                }]
            });
        });
    </script>

  


}