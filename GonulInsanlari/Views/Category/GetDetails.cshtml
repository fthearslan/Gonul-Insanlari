@model CategoryDetailsUIViewModel
@{
    ViewData["Title"] = "GetDetails";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}

<div class="breadcrumb-and-page-title mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-page-breadcrumb-wrapper">
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="/category/all">Categories</a></li>
                        <li>@Model.Name</li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="page-title-area">
                
                    <h1>@Model.Name <span>@Model.Articles.Count Articles</span></h1>
                    <p>@GetString.GetRawString(@Model.Description)</p>
                 
                    <div class="page-content">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-post2">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-8">

                <div class="blog-post mb-120">

                    <div class="container-xl">

                        <div class="row gy-4 justify-content-center mb-70">


                            @foreach (ArticleListUIViewModel article in Model.Articles)
                            {

                                <div class="col-lg-6 col-md-6 col-sm-10">


                                    <div class="blog-card3">

                                        <div class="blog-card-img">
                                            <a href="standard-formate.html"><img src="~/Images/@article.ImagePath"  width="424px;" height="256px;" alt=""> </a>
                                        </div>

                                        <div class="blog-content2">

                                            <div class="blog-text">
                                                <ul class="btn-area">

                                                    <li class="basic-btn"><a href="/category/details/@article.CategoryName"> @article.CategoryName </a></li>

                                                </ul>

                                                <h4>
                                                    <a href="standard-formate.html">
                                                        @article.Title
                                                    </a>
                                                </h4>
                                            </div>
                                            <div class="author-area">
                                                <div class="author-img">
                                                    <a href="editor-profile.html"><img src="~/Images/profile.jpg" width="40px;" height="40px;" alt=""></a>
                                                </div>
                                                <div class="author-content">
                                                    <div class="author-name">
                                                        <a href="editor-profile.html"> Author Name </a>
                                                    </div>
                                                    <div class="publish-date">
                                                        <a href="#"> @article.Created.ToShortDateString() </a>
                                                        <span> @article.SeenCount Read </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                </div>


                            }



                        </div>

                        <div class="row">
                            <div class="col-lg-12 d-flex justify-content-center">

                                <a  href="ai-category.html" class="load-btn hover-btn">
                                    LOAD MORE
                                    <svg class="arrow" width="10" height="10" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1M9 1C8.66667 2.66667 8 6.33333 9 9" stroke-width="1.5" stroke-linecap="round"></path>
                                    </svg>
                                </a>

                            </div>  

                        </div>

                    </div>
                </div>


            </div>

            <div class="col-lg-4">

                @await Component.InvokeAsync("SideBarComponent")


            </div>

        </div>

    </div>

</div>

