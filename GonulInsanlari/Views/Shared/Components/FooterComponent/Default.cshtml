                    </div>

                </div>

                <!-- Category -->
                <div class="col-lg-4 col-md-6 col-sm-4 d-flex justify-content-lg-center justify-content-sm-end ">



                    <div class="footer-widget">

                        <div class="widget-title">
                            <h5>Kategoriler</h5>
                        </div>

                        <ul class="widget-list">

                            @foreach (FooterCategoryViewModel category in Model.Categories)
                            {

                                <li class="category-list">

                                    <a href="/category/@GetString.GetSlugUrl(@category.Name)/@category.Id">
                                        @category.Name
                                        <svg class="arrow" width="10" height="10" viewBox="0 0 10 10"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1M9 1C8.66667 2.66667 8 6.33333 9 9"
                                                  stroke="#191919" stroke-width="1.5" stroke-linecap="round"></path>
                                        </svg>
                                    </a>

                                </li>

                            }


                        </ul>

                    </div>

                </div>
                <!-- Category -->
                <!-- Articles -->
                <div class="col-lg-4 col-md-6 d-flex justify-content-lg-end">


                    <div class="footer-widget">

                        <div class="widget-title">
                            <h5>Son Yazılar</h5>
                        </div>

                        <ul>
                            @foreach (ArticleSideBarViewModel article in Model.Articles)
                            {
                                <li>
                                    <div class="img-section">
                                        <a href="/article/@GetString.GetSlugUrl(article.Title)/@article.Id" class="gallery-img">
                                            <img src="~/Images/@article.ImagePath" alt="" width="80px" height="80px">
                                        </a>
                                        <div class="img-content">
                                            <a href="ai-category.html">@article.Created.ToShortDateString()</a>
                                            <h3><a href="/article/@GetString.GetSlugUrl(article.Title)/@article.Id">@article.Title </a></h3>
                                        </div>
                                    </div>

                                </li>

                            }

                        </ul>

                    </div>

                </div>
                <!-- Articles -->


            </div>

            <div class="footer-list">

                <div class="copyright-area">
                    <p> © Copyright @DateTime.Now.Year <a href="/"> Gönül İnsanları  </a></p>
                </div>

                <ul>
                    <li><a href="/about-us">Hakkımızda</a></li>
                    <li><a href="/contact-us">Bize ulaşın</a></li>
                </ul>

