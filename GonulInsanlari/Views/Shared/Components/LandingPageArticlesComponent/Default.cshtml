@model List<ArticleListUIViewModel>

<div class="blog-post mb-120">

    <div class="container-xl">

        <div class="row gy-4 justify-content-center mb-70">

            <!--  Blogs  -->
            @foreach (ArticleListUIViewModel article in Model)
            {

                <div class="col-lg-6 col-md-6 col-sm-10">

                    <div class="blog-card3">

                        <div class="blog-card-img">
                            <a href="/article/@GetString.GetSlugUrl(article.Title)/@article.Id"><img src="~/Images/@article.ImagePath" width="100%" height="auto" style="max-width:424px;max-height:256px;" alt=""> </a>
                        </div>

                        <div class="blog-content2">

                            <div class="blog-text">
                                <ul class="btn-area">

                                    <li class="basic-btn"><a href="/category/@GetString.GetSlugUrl(article.CategoryName)/@article.CategoryId"> @article.CategoryName</a></li>
                                  
                                    @if (DateTime.Now.Subtract(article.Created).Days <= 1)
                                    {
                                        <li class="basic-btn">  <a href=""> New </a> </li>
                                    }

                                </ul>

                                <h4>
                                    <a href="/article/@GetString.GetSlugUrl(article.Title)/@article.Id">
                                        @article.Title
                                    </a>
                                </h4>
                            </div>
                            <div class="author-area">
                                <div class="author-img">
                                    <a href="#"><img src="~/Images/profile.jpg" width="40px;" height="40px;" alt=""></a>
                                </div>
                                <div class="author-content">
                                    <div class="author-name">
                                        <a href="#"> Admin </a>
                                    </div>
                                    <div class="publish-date">
                                        <a href=""> @article.Created.ToShortDateString() </a>
                                        <span> @article.SeenCount read </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }





        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <a href="/article/all" class="load-btn hover-btn">
                    See All
                    <svg class="arrow" width="10" height="10" viewBox="0 0 10 10" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1M9 1C8.66667 2.66667 8 6.33333 9 9" stroke-width="1.5" stroke-linecap="round"></path>
                    </svg>
                </a>
            </div>
        </div>

    </div>
</div>