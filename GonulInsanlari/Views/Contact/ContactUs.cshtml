@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/Main_Layout.cshtml";
}


<div class="blog-post-10 pt-20 mb-120">
    <div class="container">
        <div class="inner-page-breadcrumb-wrapper mb-20">
            <ul>
                <li><a href="/">Home</a></li>
                <li>Contact</li>
            </ul>
        </div>
        <div class="row g-lg-4 gy-5">
            <div class="col-lg-8">
                <div class="inquiry-form contact-inquiry">
                    <div class=" title">
                        <h1>Contact Us!</h1>
                    </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-inner mb-20">
                                    <label>Your Name and Surname:</label>
                                    <input type="text" id="name" placeholder="Jackson Mile">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-inner mb-20">
                                    <label>Your Email:</label>
                                    <input type="email" id="from" placeholder="example@gmail.com">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-inner mb-20">
                                    <label>Subject</label>
                                    <input type="text" id="subject" placeholder="What’s kind of topic">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-inner mb-15">
                                    <label>Message <span> </span></label>
                                    <textarea class="contact-massage" id="content" placeholder="Write Something..."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-inner">
                            <button class="primary-btn1 contact-btn" onclick="submit()"  type="button">
                                <span>

                                    <svg class="arrow" width="10" height="10" viewBox="0 0 10 10"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M1 9L9 1M9 1C7.22222 1.33333 3.33333 2 1 1M9 1C8.66667 2.66667 8 6.33333 9 9"
                                              stroke="#191919" stroke-width="1.5" stroke-linecap="round"></path>
                                    </svg>
                                    SUBMIT
                                </span>

                            </button>
                        </div>
                        <div style="margin-top:20px;" class="row">
                            <ul id="validations">
                            </ul>

                        </div>
                </div>
            </div>
            <div class="col-lg-4">

                @await Component.InvokeAsync("SideBarComponent")


            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/js/jsui/contact.js"></script>

                                }